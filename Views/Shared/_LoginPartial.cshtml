@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="right: 5%; position: relative; gap: 20px; font-weight: bolder;">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <button style="background: #817D44; color: whitesmoke; border-radius: 15px;"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a></button>
    </li>
    <li class="nav-item">
            <button style ="background: #817D44; color: whitesmoke; border-radius: 15px;"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a></button>
    </li>
}
</ul>
